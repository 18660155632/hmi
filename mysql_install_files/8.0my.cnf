[mysqld]

###base
skip_ssl
user = mysql
port = 3306
server_id = 803306
report_port = 3306
report_host = 172.16.1.80
event_scheduler = off
skip_name_resolve = 1
lower_case_table_names = 1
default_time_zone = "+8:00"
character-set-server = utf8mb4
#collation-server = utf8mb4_bin
explicit_defaults_for_timestamp = on
transaction_isolation = REPEATABLE-READ
sql_mode = NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES
optimizer_switch = duplicateweedout=off,condition_fanout_filter=off,derived_merge=off
default_authentication_plugin = mysql_native_password 


###other ports
mysqlx_port = 33060
admin_port = 33062
admin_address = 127.0.0.1


###file address
basedir = /usr/local/mysql
datadir = /data/mysql/mysql3306/data
tmpdir = /data/mysql/mysql3306/tmp
log-bin = /data/mysql/mysql3306/logs/binlog
log_error = /data/mysql/mysql3306/logs/mysql-error.log
slow_query_log_file = /data/mysql/mysql3306/logs/mysql-slow.log
pid-file = /data/mysql/mysql3306/tmp/mysql3306.pid
socket = /data/mysql/mysql3306/tmp/mysql3306.sock
plugin_dir = /usr/local/mysql/lib/plugin
relay-log = /data/mysql/mysql3306/logs/relay
relay-log-index = /data/mysql/mysql3306/logs/relay.index
secure_file_priv = /tmp
mysqlx_socket = /data/mysql/mysql3306/tmp/mysqlx3306.sock


###log set
binlog_format = row
expire_logs_days = 15
binlog_rows_query_log_events = 1
slow_query_log = 1
long_query_time = 1
log_slow_admin_statements = 1
max_relay_log_size = 256M
relay_log_purge = 1
relay_log_recovery = 1
log_error_verbosity = 3
log_timestamps = SYSTEM


###binlog checksum
binlog-checksum = CRC32
master-verify-checksum = 1
slave-sql-verify-checksum = 1


###innodb
innodb_file_per_table = 1
innodb_buffer_pool_size = 1GB
innodb_buffer_pool_instances = 8
innodb_buffer_pool_load_at_startup = 1
innodb_buffer_pool_dump_at_shutdown = 1
innodb_log_file_size = 2G
innodb_log_files_in_group = 3
innodb_log_buffer_size = 50M
innodb_flush_method = O_DIRECT
innodb_io_capacity = 600
innodb_flush_sync = 0
innodb_max_dirty_pages_pct = 75
innodb_print_all_deadlocks=1
innodb_write_io_threads = 8
innodb_read_io_threads = 8
innodb_purge_threads = 4
innodb_page_cleaners = 4
innodb_online_alter_log_max_size = 2G
innodb_undo_tablespaces = 2
innodb_undo_log_truncate = on


###cache
table_open_cache = 4000
open_files_limit = 65535
thread_cache_size = 100
max_connections = 1000
max_connect_errors = 1000000
max_allowed_packet = 64M
max_heap_table_size = 32M
tmp_table_size = 32M
sort_buffer_size = 4M
join_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 4M
bulk_insert_buffer_size = 8M
binlog_cache_size = 1M


###timeout
interactive_timeout = 28800
wait_timeout = 28800
innodb_lock_wait_timeout = 50
lock_wait_timeout = 100
innodb_rollback_on_timeout = on


###double one
innodb_flush_log_at_trx_commit = 1
sync_binlog = 1


###GTID
gtid-mode=on
enforce-gtid-consistency = on
master-info-repository = TABLE
relay-log-info-repository = TABLE


###MTS
slave_parallel_type = logical_clock
slave_preserve_commit_order = 1
slave_parallel_workers = 10
relay_log_recovery = ON
log_slave_updates = 1
binlog_transaction_dependency_tracking = WRITESET
transaction_write_set_extraction = XXHASH64


###MGR
plugin_load_add = "group_replication.so"
transaction-write-set-extraction = XXHASH64
loose-group_replication_group_name = "93dc3cbd-4f38-11eb-9883-525400c8c3d1"
loose-group_replication_local_address = "172.16.xx.xx:33061"
loose-group_replication_group_seeds = "172.16.xx.xx:33061,172.16.xx.xx:33061,172.16.xx.xx:33061"
loose-group_replication_start_on_boot = off
loose-group_replication_bootstrap_group = off
loose-group_replication_member_weight = 90
loose-group_replication_transaction_size_limit = 1G
sql_require_primary_key = on
disabled_storage_engines = "MyISAM,BLACKHOLE,FEDERATED,ARCHIVE,MEMORY,CSV"


###semi sync replication
plugin-load-add = "rpl_semi_sync_master=semisync_master.so"
plugin-load-add = "rpl_semi_sync_slave=semisync_slave.so"
loose-rpl_semi_sync_master_enabled = 0
loose-rpl_semi_sync_slave_enabled = 0
loose-rpl_semi_sync_master_timeout = 1000


###some var for MySQL 8
plugin-load-add = "mysql_clone.so"
innodb_print_ddl_logs = 1
innodb_autoinc_lock_mode = 1
innodb_flush_neighbors = 1


###slave set
#read_only = 1
#skip_slave_start = 1
